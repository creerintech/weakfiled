    protected void BtnUpdate_Click(object sender, EventArgs e)
    {
        int i = Convert.ToInt32(hiddenbox.Value);
        if (i == 0)
        {
            int UpdateRow = 0;
            try
            {
                if (Check() == true)
                {
                    if (ViewState["EditID"] != null)
                    {
                        Entity_DeptSubSubCategory.DepartmentSubSubCategoryId = Convert.ToInt32(ViewState["EditID"]);
                    }
                    Entity_DeptSubSubCategory.DepartmentSubSubCategory = txtDepartmentSubSubCategory.Text.Trim();
                    Entity_DeptSubSubCategory.DepartmentSubCategoryId = Convert.ToInt32(ddlSubDepartment.SelectedValue);
                    Entity_DeptSubSubCategory.DepartmentCategoryId = Convert.ToInt32(ddlDepartmentCategory.SelectedValue);
                    Entity_DeptSubSubCategory.UserId = Convert.ToInt32(Session["UserId"]);
                    Entity_DeptSubSubCategory.LoginDate = DateTime.Now;
                    UpdateRow = Obj_DeptSubSubCategory.UpdateDepartmentSubCategory(ref Entity_DeptSubSubCategory, out StrError);
                    if (UpdateRow != 0)
                    {
                        Obj_Comm.ShowPopUpMsg("Record Updated Successfully", this.Page);
                        MakeEmptyForm();
                        ddlDepartmentCategory.Focus();
                        Entity_DeptSubSubCategory = null;
                        Obj_Comm = null;
                    }
                }
            }

            catch (Exception ex)
            {
                throw new Exception(ex.Message);
            }
        }
    }

