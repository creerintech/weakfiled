    protected void ddlDepartmentCategory_SelectedIndexChanged(object sender, EventArgs e)
    {
        try
        {
            DataSet Ds = new DataSet();
            Ds = Obj_DeptSubSubCategory.GetSubDepartment(Convert.ToInt32(ddlDepartmentCategory.SelectedValue), out StrError);
            if (Ds.Tables.Count > 0)
            {
                if (Ds.Tables[0].Rows.Count > 0)
                {
                    if (Ds.Tables[0].Rows.Count > 0)
                    {
                        ddlSubDepartment.DataSource = Ds.Tables[0];
                        ddlSubDepartment.DataTextField = "DepartmentSubCategory";
                        ddlSubDepartment.DataValueField = "DepartmentSubCategoryId";
                        ddlSubDepartment.DataBind();

                    }
                }
            }
        }
        catch (Exception ex)
        {
            throw new Exception(ex.Message);
        }
    }
