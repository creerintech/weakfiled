    protected void GrdReport_ItemCommand(object source, RepeaterCommandEventArgs e)
    {
        try
        {
            switch (e.CommandName)
            {
                case ("Select"):
                    {
                        if (Convert.ToInt32(e.CommandArgument) != 0)
                        {
                            ViewState["EditID"] = Convert.ToInt32(e.CommandArgument);
                            LinkButton lnk = (LinkButton)e.Item.FindControl("lbtn_List");
                            Label lbl = (Label)e.Item.FindControl("lblUsedCnt");

                            if (lnk != null)
                            {
                                hdnFldUsedCnt.Value = lbl.Text;
                            }
                            DS = Obj_DeptSubSubCategory.GetDepartmentSubCategoryForEdit(Convert.ToInt32(e.CommandArgument), out StrError);

                            if (DS.Tables.Count > 0 && DS.Tables[0].Rows.Count > 0)
                            {
                                txtDepartmentSubSubCategory.Text = DS.Tables[0].Rows[0]["DepartmentSubSubCategory"].ToString();

                                if (Convert.ToInt32(DS.Tables[0].Rows[0]["DepartmentCategoryID"]) > 0)
                                {
                                    ddlDepartmentCategory.SelectedValue = DS.Tables[0].Rows[0]["DepartmentCategoryID"].ToString();
                                    ddlDepartmentCategory_SelectedIndexChanged(source, e);
                                }
                                if (Convert.ToInt32(DS.Tables[0].Rows[0]["DepartmentSubCategoryID"]) > 0)
                                {
                                    ddlSubDepartment.SelectedValue = DS.Tables[0].Rows[0]["DepartmentSubCategoryID"].ToString();
                                   
                                }
                            }
                            else
                            {
                                MakeEmptyForm();
                            }
                            DS = null;
                            Obj_DeptSubSubCategory = null;
                            BtnSave.Visible = false;
                            if (!FlagEdit)
                                BtnUpdate.Visible = true;
                            if (!FlagDel)
                                BtnDelete.Visible = true;
                            txtDepartmentSubSubCategory.Focus();
                        }

                        break;
                    }
            }
        }
        catch (Exception ex)
        {
            throw new Exception(ex.Message);
        }
    }

